<Page
    x:Class="Wallddit.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="{ThemeResource SystemControlChromeHighAcrylicWindowMediumBrush}">
        <StackPanel VerticalAlignment="Center">
            <Image
                x:Name="wallpaperImage"
                HorizontalAlignment="Center"
                Width="Auto"
                MinHeight="0" MaxHeight="536" />
            
            <TextBox
                x:Name="wallpaperUrlTextBox"
                FontSize="15" TextAlignment="Center"
                Margin="0,12,0,0"
                HorizontalAlignment="Center"
                Height="32" Width="480" />

            <Button
                x:Name="getWallpaperButton"
                Content="Get Wallpaper"
                FontSize="15"
                Margin="0,24,0,0"
                HorizontalAlignment="Center"
                Height="32" Width="120" />

        </StackPanel>
        
    </Grid>
</Page>
